import java.awt.*;
import java.io.File;
import java.io.IOException;


public class SpeedReader {

	/**
	 * @param args
	 * @throws IOException 
	 */
	public static void main(String[] args) throws IOException {
		
	}
	
	public void printStaggered(WordGenerator wg, Graphics g) throws InterruptedException {
	    while(wg.hasNext()) {
	        System.out.println(wg.next());
	        Thread.sleep(1000);
	    }
	}
	
	public Graphics initializeDisplay(int width, int height, int fontsize, int wpm) {
		DrawingPanel panel = new DrawingPanel(width, height);
		Graphics g = panel.getGraphics();
		Font f = new Font("Courier", Font.BOLD, fontsize);
		g.setFont(f);
		return g;
	}

}
