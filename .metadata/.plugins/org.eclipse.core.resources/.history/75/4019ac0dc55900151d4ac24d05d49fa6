import java.awt.*;
import java.io.File;
import java.io.IOException;


public class SpeedReader {

	/**
	 * @param args
	 * @throws IOException 
	 */
	public static void main(String[] args) throws IOException {
		String filename = args[0];
		int width = Integer.parseInt(args[1]);
		int height = Integer.parseInt(args[2]);
		int fontSize = Integer.parseInt(args[3]);
		int wpm = Integer.parseInt(args[4]);
		
	}
	
	public void printStaggered(WordGenerator wg, Graphics g, wpm) throws InterruptedException {
	    while(wg.hasNext()) {
	        g.drawString(wg.next(), 10, 10));
	        Thread.sleep(getMilliseconds(wpm));
	    }
	}
	
	public int getMilliseconds(int wpm) {
		return 60000 / wpm;
	}
	
	public Graphics initializeDisplay(int width, int height, int fontsize, int wpm) {
		DrawingPanel panel = new DrawingPanel(width, height);
		Graphics g = panel.getGraphics();
		Font f = new Font("Courier", Font.BOLD, fontsize);
		g.setFont(f);
		return g;
	}

}
